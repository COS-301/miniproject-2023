rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read: if true;
    }
    
    // Request.auth is empty due to a bug
    // match /profiles/{userId} {
    //   allow read: if request.auth != null && request.auth.uid == userId;
    // }
    
    match /profiles/{userId} {
      allow read: if true;
    }
    
    match /users/{userId} {
      allow read: if true;
    }

    match /memories {
      allow read: if request.auth != null;
    }
  }
}