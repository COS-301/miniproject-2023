rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write, list: if true;
    }

    // Request.auth is empty due to a bug
    // match /profiles/{userId} {
    //   allow read: if request.auth != null && request.auth.uid == userId;
    // }

    match /profiles/{userId=**} {
      allow read, write;

    }

  }
}

