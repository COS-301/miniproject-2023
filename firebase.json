{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "dist/apps/api",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "package-lock.json"
      ],
      "runtime": "nodejs16"
    },
    {
      "source": "apps",
      "codebase": "codebase",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "deploy",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "ui": {
      "port": 5001,
      "enabled": true
    },
    "auth": {
      "port": 5002
    },
    "firestore": {
      "port": 5003
    },
    "database": {
      "port": 5004
    },
    "functions": {
      "port": 5005
    },
    "storage": {
      "port": 5006
    },
    "hosting": {
      "port": 5007
    },
    "pubsub": {
      "port": 5008
    },
    "eventarc": {
      "port": 5009
    },
    "singleProjectMode": true
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  }
}
